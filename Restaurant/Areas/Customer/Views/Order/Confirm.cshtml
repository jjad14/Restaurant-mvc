@model Restaurant.Models.ViewModels.OrderDetailsViewModel
@{
    ViewData["Title"] = "Confirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div class="backgroundWhite">
    <div class="row px-3">
        <div class="col-8">
            <h2 class="text-info">Order Confirmed</h2>
        </div>
        <div class="col-4 text-right">
            <a  asp-controller="Home" asp-action="Index" class="btn btn-success form-control">New Order</a>
        </div>
    </div>

    @if (Model.OrderHeader != null)
    {
        <div style="color: maroon;" class="p-3">
            Your order has been confirmed. Please see the order summary below for more details.
            <br />
            Contact us if you have any questions.
        </div>
        <partial name="_IndividualOrderDetails" model="Model" />
    }
    else
    {
        <div class="text-danger">Error... Please try again.</div>
    }
</div>

